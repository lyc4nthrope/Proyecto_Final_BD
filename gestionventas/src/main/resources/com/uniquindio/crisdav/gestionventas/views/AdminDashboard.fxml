<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.uniquindio.crisdav.gestionventas.controllers.AdminDashboardController">
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Panel Admin" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Cerrar sesión" onAction="#cerrarSesion"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>

            <HBox spacing="12">
                <VBox spacing="6" style="-fx-border-color: #ddd; -fx-padding:10;">
                    <Label text="Estadísticas rápidas" style="-fx-font-weight:bold;"/>
                    <Label fx:id="lblTotalVentas" text="Ventas: 0"/>
                    <Label fx:id="lblClientes" text="Clientes: 0"/>
                    <Label fx:id="lblProductosBajoStock" text="Productos bajo stock: 0"/>
                </VBox>
                <VBox spacing="6" style="-fx-border-color: #ddd; -fx-padding:10;">
                    <Label text="Accesos rápidos" style="-fx-font-weight:bold;"/>
                    <Button text="Nueva Venta" onAction="#abrirNuevaVenta"/>
                    <Button text="Gestionar Productos" onAction="#abrirGestionProductos"/>
                    <Button text="Gestionar Clientes" onAction="#abrirGestionClientes"/>
                </VBox>
            </HBox>
            <Pane prefHeight="200" style="-fx-border-color:#eee;">
                <!-- aquí podrías añadir un gráfico más tarde -->
            </Pane>
        </VBox>
    </center>

    <bottom>
        <Label text="Sistema de Gestión - Admin" style="-fx-padding:10;"/>
    </bottom>
</BorderPane>
