<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="Factura" pageWidth="612" pageHeight="792" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Parámetros -->
    <parameter name="ID_VENTA" class="java.lang.Integer"/>
    <parameter name="FECHA" class="java.lang.String"/>
    <parameter name="CLIENTE" class="java.lang.String"/>
    <parameter name="CEDULA" class="java.lang.String"/>
    <parameter name="VENDEDOR" class="java.lang.String"/>
    <parameter name="TIPO_VENTA" class="java.lang.String"/>
    <parameter name="SUBTOTAL" class="java.math.BigDecimal"/>
    <parameter name="TOTAL_IVA" class="java.math.BigDecimal"/>
    <parameter name="TOTAL" class="java.math.BigDecimal"/>

    <!-- Campos -->
    <field name="codigoProducto" class="java.lang.String"/>
    <field name="nombreProducto" class="java.lang.String"/>
    <field name="cantidad" class="java.lang.Integer"/>
    <field name="precioUnitario" class="java.math.BigDecimal"/>
    <field name="iva" class="java.math.BigDecimal"/>
    <field name="subtotal" class="java.math.BigDecimal"/>

    <!-- Variable -->
    <variable name="SUBTOTAL_ITEMS" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{subtotal}]]></variableExpression>
    </variable>

    <!-- TÍTULO / ENCABEZADO -->
    <title>
        <band height="120">
            <staticText>
                <reportElement x="0" y="0" width="250" height="30"/>
                <textElement>
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[ELECTRODOMÉSTICOS S.A.]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="30" width="250" height="20"/>
                <textElement>
                    <font size="12"/>
                </textElement>
                <text><![CDATA[NIT: 900.123.456-7]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="50" width="250" height="20"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Armenia, Quindío]]></text>
            </staticText>

            <staticText>
                <reportElement x="350" y="0" width="100" height="20"/>
                <textElement textAlignment="Right">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[FACTURA Nº]]></text>
            </staticText>

            <textField>
                <reportElement x="460" y="0" width="112" height="20"/>
                <textElement textAlignment="Right">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[String.format("%08d", $P{ID_VENTA})]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="350" y="25" width="100" height="15"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Fecha:]]></text>
            </staticText>

            <textField>
                <reportElement x="460" y="25" width="112" height="15"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{FECHA}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="85" width="572" height="1"/>
            </line>

            <staticText>
                <reportElement x="0" y="95" width="100" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Cliente:]]></text>
            </staticText>

            <textField>
                <reportElement x="100" y="95" width="250" height="20"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{CLIENTE}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="350" y="95" width="50" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[CC:]]></text>
            </staticText>

            <textField>
                <reportElement x="400" y="95" width="172" height="20"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{CEDULA}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- ENCABEZADO DE COLUMNAS -->
    <columnHeader>
        <band height="30">
            <staticText>
                <!-- forecolor must be in reportElement, not in textElement/font -->
                <reportElement mode="Opaque" x="0" y="0" width="80" height="30" backcolor="#007BFF" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Código]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="80" y="0" width="200" height="30" backcolor="#007BFF" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Producto]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="280" y="0" width="60" height="30" backcolor="#007BFF" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Cant.]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="340" y="0" width="100" height="30" backcolor="#007BFF" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Precio Unit.]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="440" y="0" width="50" height="30" backcolor="#007BFF" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[IVA]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="490" y="0" width="82" height="30" backcolor="#007BFF" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Subtotal]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- DETALLE (items) -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="80" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{codigoProducto}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="80" y="0" width="200" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="9"/>
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nombreProducto}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="0" width="60" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{cantidad}]]></textFieldExpression>
            </textField>

            <textField pattern="$#,##0.00">
                <reportElement x="340" y="0" width="100" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9"/>
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{precioUnitario}]]></textFieldExpression>
            </textField>

            <textField pattern="#0.00%">
                <reportElement x="440" y="0" width="50" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{iva}]]></textFieldExpression>
            </textField>

            <textField pattern="$#,##0.00">
                <reportElement x="490" y="0" width="82" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9"/>
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{subtotal}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- SUMARIO / TOTALES -->
    <summary>
        <band height="150">
            <staticText>
                <reportElement x="340" y="10" width="100" height="20"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Subtotal:]]></text>
            </staticText>

            <textField pattern="$#,##0.00">
                <reportElement x="450" y="10" width="122" height="20"/>
                <textElement textAlignment="Right">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{SUBTOTAL}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="340" y="35" width="100" height="20"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[IVA:]]></text>
            </staticText>

            <textField pattern="$#,##0.00">
                <reportElement x="450" y="35" width="122" height="20"/>
                <textElement textAlignment="Right">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{TOTAL_IVA}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="340" y="60" width="232" height="1"/>
                <graphicElement>
                    <pen lineWidth="2.0"/>
                </graphicElement>
            </line>

            <staticText>
                <reportElement x="340" y="65" width="100" height="25"/>
                <textElement textAlignment="Right">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAL:]]></text>
            </staticText>

            <textField pattern="$#,##0.00">
                <reportElement x="450" y="65" width="122" height="25"/>
                <textElement textAlignment="Right">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{TOTAL}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="110" width="572" height="15"/>
                <textElement textAlignment="Center">
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Gracias por su compra]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="130" width="572" height="15"/>
                <textElement textAlignment="Center">
                    <font size="8" isItalic="true"/>
                </textElement>
                <text><![CDATA[Sistema de Gestión de Ventas - Universidad del Quindío]]></text>
            </staticText>
        </band>
    </summary>

</jasperReport>
