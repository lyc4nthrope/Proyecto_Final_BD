<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.uniquindio.crisdav.gestionventas.controllers.ClientesVendedorController">
    <top>
        <HBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Clientes" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="txtBuscarCliente" promptText="Buscar..." onKeyReleased="#buscarCliente"/>
            <Button text="Nuevo" onAction="#nuevoCliente"/>
            <Button text="Refrescar" onAction="#refrescar"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TableView fx:id="tablaClientes" prefHeight="300" onMouseClicked="#seleccionarCliente">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
                    <TableColumn fx:id="colCedula" text="Cédula" prefWidth="120"/>
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
                    <TableColumn fx:id="colCorreo" text="Correo" prefWidth="180"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Label text="Nombre:"/>
                <TextField fx:id="txtNombre" promptText="Nombre" prefWidth="200"/>
                <Label text="Cédula:"/>
                <TextField fx:id="txtCedula" promptText="Cédula" prefWidth="120"/>
                <Button text="Guardar" onAction="#guardarCliente"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
