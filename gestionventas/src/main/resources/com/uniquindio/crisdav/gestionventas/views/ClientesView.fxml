<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.uniquindio.crisdav.gestionventas.controller.ClienteController">
    <center>
        <VBox spacing="10" padding="10">
            <TableView fx:id="tablaClientes" prefHeight="300" onMouseClicked="#seleccionarCliente">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="120" />
                    <TableColumn fx:id="colCedula" text="Cédula" prefWidth="100" />
                    <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="150" />
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="100" />
                    <TableColumn fx:id="colCorreo" text="Correo" prefWidth="150" />
                </columns>
            </TableView>
            <HBox spacing="10">
                <Label text="Nombre:"/>
                <TextField fx:id="txtNombre" promptText="Nombre"/>
                <Label text="Cédula:"/>
                <TextField fx:id="txtCedula" promptText="Cédula"/>
                <Label text="Dirección:"/>
                <TextField fx:id="txtDireccion" promptText="Dirección"/>
                <Label text="Teléfono:"/>
                <TextField fx:id="txtTelefono" promptText="Teléfono"/>
                <Label text="Correo:"/>
                <TextField fx:id="txtCorreo" promptText="Correo"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Agregar" onAction="#agregarCliente" />
                <Button text="Editar" onAction="#editarCliente" />
                <Button text="Eliminar" onAction="#eliminarCliente" />
                <Button text="Refrescar" onAction="#initialize" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <Label text="Gestión de Clientes" style="-fx-font-size: 16px; -fx-padding: 10;" />
    </bottom>
</BorderPane>
