<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.uniquindio.crisdav.gestionventas.controllers.views.ClientesViewController"
      spacing="15" style="-fx-padding: 20;">

    <!-- Título -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="👥 Gestión de Clientes" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="➕ Nuevo Cliente" onAction="#nuevoCliente" 
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 8 20; -fx-font-weight: bold;"/>
    </HBox>
    
    <Separator/>

    <!-- Búsqueda y Filtros -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 5;">
        <Label text="🔍 Buscar:" style="-fx-font-weight: bold; -fx-font-size: 13;"/>
        <TextField fx:id="txtBuscar" promptText="Buscar por cédula, nombre o teléfono..." prefWidth="350"/>
        <Button text="🔄 Actualizar" onAction="#cargarClientes" 
                style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
        
        <Separator orientation="VERTICAL"/>
        
        <Label text="Filtrar:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="comboFiltroCredito" prefWidth="180" onAction="#aplicarFiltros"></ComboBox>
    </HBox>

    <!-- Tabla de Clientes -->
    <TableView fx:id="tablaClientes" VBox.vgrow="ALWAYS" style="-fx-font-size: 12;">
        <columns>
            <TableColumn text="ID" prefWidth="50" fx:id="colId" style="-fx-alignment: CENTER;"/>
            <TableColumn text="Cédula" prefWidth="110" fx:id="colCedula"/>
            <TableColumn text="Nombre" prefWidth="200" fx:id="colNombre"/>
            <TableColumn text="Dirección" prefWidth="180" fx:id="colDireccion"/>
            <TableColumn text="Teléfono" prefWidth="120" fx:id="colTelefono"/>
            <TableColumn text="Correo" prefWidth="180" fx:id="colCorreo"/>
            <TableColumn text="Crédito Activo" prefWidth="120" fx:id="colCreditoActivo" style="-fx-alignment: CENTER;"/>
            <TableColumn text="Acciones" prefWidth="180" fx:id="colAcciones" style="-fx-alignment: CENTER;"/>
        </columns>
        <placeholder>
            <VBox alignment="CENTER" spacing="10">
                <Label text="👥" style="-fx-font-size: 48;"/>
                <Label text="No hay clientes registrados" style="-fx-font-size: 16; -fx-text-fill: #666;"/>
                <Label text="Haga clic en 'Nuevo Cliente' para agregar uno" style="-fx-font-size: 12; -fx-text-fill: #999;"/>
            </VBox>
        </placeholder>
    </TableView>

    <!-- Información y Estadísticas -->
    <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-background-radius: 5;">
        <VBox spacing="5">
            <Label text="📊 Estadísticas" style="-fx-font-weight: bold; -fx-font-size: 13;"/>
            <HBox spacing="10">
                <Label text="Total de clientes:" style="-fx-font-weight: bold;"/>
                <Label fx:id="lblTotalClientes" text="0" style="-fx-text-fill: #007bff; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
        
        <Separator orientation="VERTICAL"/>
        
        <VBox spacing="5">
            <Label text="💳 Créditos" style="-fx-font-weight: bold; -fx-font-size: 13;"/>
            <HBox spacing="10">
                <Label text="Con crédito activo:" style="-fx-font-weight: bold;"/>
                <Label fx:id="lblClientesConCredito" text="0" style="-fx-text-fill: #ffc107; -fx-font-weight: bold; -fx-font-size: 14;"/>
            </HBox>
        </VBox>
        
        <Separator orientation="VERTICAL"/>
        
        <VBox spacing="5">
            <Label text="✅ Disponibles" style="-fx-font-weight: bold; -fx-font-size: 13;"/>
            <HBox spacing="10">
                <Label text="Sin crédito activo:" style="-fx-font-weight: bold;"/>
                <Label fx:id="lblClientesSinCredito" text="0" style="-fx-text-fill: #28a745; -fx-font-weight: bold; -fx-font-size: 14;"/>
            </HBox>
        </VBox>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <VBox spacing="3" alignment="CENTER_RIGHT">
            <Label text="💡 Tip: Use la búsqueda para filtrar clientes" style="-fx-font-size: 11; -fx-text-fill: #666;"/>
            <Label text="Los clientes con crédito activo están marcados" style="-fx-font-size: 11; -fx-text-fill: #666;"/>
        </VBox>
    </HBox>

</VBox>