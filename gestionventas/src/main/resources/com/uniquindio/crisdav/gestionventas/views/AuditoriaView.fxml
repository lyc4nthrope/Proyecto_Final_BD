<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.uniquindio.crisdav.gestionventas.controllers.views.AuditoriaViewController"
      spacing="15" style="-fx-padding: 20;">

    <!-- Título -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="🔒 Auditoría del Sistema" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="📊 Exportar Log" onAction="#exportarReporte" 
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 13; -fx-padding: 8 15;"/>
        <Button text="🗑️ Limpiar Antigua" onAction="#limpiarAuditoriaAntigua" 
                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 13; -fx-padding: 8 15;"/>
    </HBox>
    
    <Separator/>

    <!-- Información -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #e7f3ff; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #007bff; -fx-border-width: 2; -fx-border-radius: 5;">
        <Label text="ℹ️" style="-fx-font-size: 24;"/>
        <VBox spacing="3">
            <Label text="Registro de Actividad del Sistema" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
            <Label text="Este módulo registra todos los accesos (Login/Logout) de usuarios al sistema" style="-fx-font-size: 11;"/>
            <Label text="Solo usuarios Administradores pueden acceder a esta información" style="-fx-font-size: 10; -fx-text-fill: #666;"/>
        </VBox>
    </HBox>

    <!-- Filtros -->
    <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="🔍 Filtros de Búsqueda" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
        
        <HBox spacing="15" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Fecha Inicio:" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                <DatePicker fx:id="dpFechaInicio" prefWidth="150"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Fecha Fin:" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                <DatePicker fx:id="dpFechaFin" prefWidth="150"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Usuario:" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                <ComboBox fx:id="comboUsuario" prefWidth="180" onAction="#aplicarFiltros"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Acción:" style="-fx-font-weight: bold; -fx-font-size: 12;"/>
                <ComboBox fx:id="comboAccion" prefWidth="150" onAction="#aplicarFiltros"></ComboBox>
            </VBox>
            
            <VBox spacing="5" alignment="BOTTOM_LEFT">
                <Label text=" "/>
                <Button text="🔍 Buscar" onAction="#cargarAuditoria" 
                        style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 13; -fx-padding: 8 20;"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Tabla de Auditoría -->
    <TableView fx:id="tablaAuditoria" VBox.vgrow="ALWAYS" style="-fx-font-size: 12;">
        <columns>
            <TableColumn text="ID" prefWidth="60" fx:id="colId" style="-fx-alignment: CENTER;"/>
            <TableColumn text="Usuario" prefWidth="200" fx:id="colUsuario"/>
            <TableColumn text="Acción" prefWidth="120" fx:id="colAccion" style="-fx-alignment: CENTER;"/>
            <TableColumn text="Fecha y Hora" prefWidth="180" fx:id="colFechaHora" style="-fx-alignment: CENTER;"/>
        </columns>
        <placeholder>
            <VBox alignment="CENTER" spacing="10">
                <Label text="🔒" style="-fx-font-size: 48;"/>
                <Label text="No hay registros de auditoría" style="-fx-font-size: 16; -fx-text-fill: #666;"/>
                <Label text="Seleccione un período y presione 'Buscar'" style="-fx-font-size: 12; -fx-text-fill: #999;"/>
            </VBox>
        </placeholder>
    </TableView>

    <!-- Estadísticas -->
    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #343a40; -fx-background-radius: 5;">
        <VBox spacing="5" alignment="CENTER" style="-fx-min-width: 200;">
            <Label text="Total Registros" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12;"/>
            <Label fx:id="lblTotalRegistros" text="0" style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;"/>
        </VBox>
        
        <Separator orientation="VERTICAL" style="-fx-background-color: white;"/>
        
        <VBox spacing="5" alignment="CENTER" style="-fx-min-width: 200;">
            <Label text="Logins" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12;"/>
            <Label fx:id="lblLogins" text="0" style="-fx-text-fill: #28a745; -fx-font-size: 28; -fx-font-weight: bold;"/>
        </VBox>
        
        <Separator orientation="VERTICAL" style="-fx-background-color: white;"/>
        
        <VBox spacing="5" alignment="CENTER" style="-fx-min-width: 200;">
            <Label text="Logouts" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12;"/>
            <Label fx:id="lblLogouts" text="0" style="-fx-text-fill: #ffc107; -fx-font-size: 28; -fx-font-weight: bold;"/>
        </VBox>
        
        <Separator orientation="VERTICAL" style="-fx-background-color: white;"/>
        
        <VBox spacing="5" alignment="CENTER" style="-fx-min-width: 300;">
            <Label text="Usuario Más Activo" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12;"/>
            <Label fx:id="lblUsuarioMasActivo" text="-" style="-fx-text-fill: #17a2b8; -fx-font-size: 16; -fx-font-weight: bold;"/>
        </VBox>
    </HBox>

    <!-- Información de Seguridad -->
    <HBox spacing="10" style="-fx-background-color: #fff3cd; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ffc107; -fx-border-width: 1; -fx-border-radius: 5;">
        <Label text="⚠️" style="-fx-font-size: 16;"/>
        <VBox spacing="3">
            <Label text="Importante: Los registros de auditoría son críticos para la seguridad" style="-fx-font-weight: bold; -fx-font-size: 11; -fx-text-fill: #856404;"/>
            <Label text="Se recomienda revisar periódicamente los accesos al sistema y exportar los logs regularmente" style="-fx-font-size: 10; -fx-text-fill: #856404;"/>
        </VBox>
    </HBox>

</VBox>