<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ReporteInventario" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Parámetros -->
    <parameter name="FECHA_REPORTE" class="java.lang.String"/>
    <parameter name="TOTAL_PRODUCTOS" class="java.lang.Integer"/>
    <parameter name="TOTAL_UNIDADES" class="java.lang.Integer"/>
    <parameter name="VALOR_TOTAL" class="java.math.BigDecimal"/>
    <parameter name="STOCK_BAJO" class="java.lang.Integer"/>

    <!-- Campos del DataSource -->
    <field name="categoria" class="java.lang.String"/>
    <field name="codigoProducto" class="java.lang.String"/>
    <field name="nombreProducto" class="java.lang.String"/>
    <field name="stock" class="java.lang.Integer"/>
    <field name="valorAdquisicion" class="java.math.BigDecimal"/>
    <field name="costoTotalCategoria" class="java.math.BigDecimal"/>

    <!-- Variables -->
    <variable name="SUBTOTAL_CATEGORIA" class="java.math.BigDecimal" resetType="Group" resetGroup="CategoriaGroup" calculation="Sum">
        <variableExpression><![CDATA[$F{costoTotalCategoria}]]></variableExpression>
    </variable>

    <variable name="TOTAL_GENERAL" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{costoTotalCategoria}]]></variableExpression>
    </variable>

    <!-- Grupo por Categoría -->
    <group name="CategoriaGroup">
        <groupExpression><![CDATA[$F{categoria}]]></groupExpression>
        <groupHeader>
            <band height="30">
                <textField>
                    <reportElement mode="Opaque" x="0" y="5" width="555" height="25" backcolor="#007BFF" forecolor="#FFFFFF"/>
                    <box>
                        <pen lineWidth="1.0"/>
                    </box>
                    <textElement verticalAlignment="Middle">
                        <font size="13" isBold="true"/>
                        <paragraph leftIndent="10"/>
                    </textElement>
                    <textFieldExpression><![CDATA["📦 CATEGORÍA: " + $F{categoria}]]></textFieldExpression>
                </textField>
            </band>
        </groupHeader>
        <groupFooter>
            <band height="25">
                <staticText>
                    <reportElement x="300" y="5" width="155" height="20"/>
                    <textElement textAlignment="Right">
                        <font size="11" isBold="true"/>
                    </textElement>
                    <text><![CDATA[Subtotal Categoría:]]></text>
                </staticText>
                <textField pattern="$#,##0.00">
                    <reportElement x="455" y="5" width="100" height="20"/>
                    <textElement textAlignment="Right">
                        <font size="11" isBold="true"/>
                    </textElement>
                    <textFieldExpression><![CDATA[$V{SUBTOTAL_CATEGORIA}]]></textFieldExpression>
                </textField>
                <line>
                    <reportElement x="0" y="0" width="555" height="1"/>
                </line>
            </band>
        </groupFooter>
    </group>

    <!-- TÍTULO -->
    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[📊 REPORTE DE INVENTARIO]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="30" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12"/>
                </textElement>
                <text><![CDATA[ELECTRODOMÉSTICOS S.A.]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="50" width="100" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha Reporte:]]></text>
            </staticText>

            <textField>
                <reportElement x="100" y="50" width="200" height="15"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{FECHA_REPORTE}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="95" width="555" height="1"/>
                <graphicElement>
                    <pen lineWidth="2.0"/>
                </graphicElement>
            </line>
        </band>
    </title>

    <!-- ENCABEZADO DE COLUMNAS -->
    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="80" height="30" backcolor="#343A40" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Código]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="80" y="0" width="220" height="30" backcolor="#343A40" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Nombre del Producto]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="300" y="0" width="60" height="30" backcolor="#343A40" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Stock]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="360" y="0" width="95" height="30" backcolor="#343A40" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Valor Adq.]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="455" y="0" width="100" height="30" backcolor="#343A40" forecolor="#FFFFFF"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Costo Total]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- DETALLE -->
    <detail>
        <band height="25">
            <textField>
                <reportElement x="0" y="0" width="80" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{codigoProducto}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="80" y="0" width="220" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="9"/>
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nombreProducto}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="300" y="0" width="60" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{stock}]]></textFieldExpression>
            </textField>

            <textField pattern="$#,##0.00">
                <reportElement x="360" y="0" width="95" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9"/>
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{valorAdquisicion}]]></textFieldExpression>
            </textField>

            <textField pattern="$#,##0.00">
                <reportElement x="455" y="0" width="100" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9"/>
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{costoTotalCategoria}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- RESUMEN -->
    <summary>
        <band height="200">
            <line>
                <reportElement x="0" y="10" width="555" height="1"/>
                <graphicElement>
                    <pen lineWidth="2.0"/>
                </graphicElement>
            </line>

            <staticText>
                <reportElement x="300" y="20" width="155" height="25"/>
                <textElement textAlignment="Right">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[VALOR TOTAL:]]></text>
            </staticText>

            <textField pattern="$#,##0.00">
                <reportElement x="455" y="20" width="100" height="25"/>
                <textElement textAlignment="Right">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{TOTAL_GENERAL}]]></textFieldExpression>
            </textField>

            <!-- Estadísticas -->
            <rectangle>
                <reportElement mode="Opaque" x="0" y="60" width="555" height="100" backcolor="#F8F9FA"/>
                <graphicElement>
                    <pen lineWidth="1.0" lineColor="#DEE2E6"/>
                </graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="20" y="70" width="180" height="20"/>
                <textElement>
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[📊 RESUMEN DEL INVENTARIO]]></text>
            </staticText>

            <staticText>
                <reportElement x="40" y="95" width="150" height="15"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Total de Productos:]]></text>
            </staticText>

            <textField>
                <reportElement x="190" y="95" width="80" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{TOTAL_PRODUCTOS}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="40" y="115" width="150" height="15"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Total de Unidades:]]></text>
            </staticText>

            <textField>
                <reportElement x="190" y="115" width="80" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{TOTAL_UNIDADES}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="95" width="150" height="15"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Productos Stock Bajo:]]></text>
            </staticText>

            <textField>
                <reportElement x="460" y="95" width="80" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{STOCK_BAJO}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="115" width="150" height="15"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Valor Total Inventario:]]></text>
            </staticText>

            <textField pattern="$#,##0.00">
                <reportElement x="460" y="115" width="80" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{VALOR_TOTAL}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="175" width="555" height="15"/>
                <textElement textAlignment="Center">
                    <font size="8" isItalic="true"/>
                </textElement>
                <text><![CDATA[Sistema de Gestión de Ventas - Universidad del Quindío]]></text>
            </staticText>
        </band>
    </summary>

</jasperReport>