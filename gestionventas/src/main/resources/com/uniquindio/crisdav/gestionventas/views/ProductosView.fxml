<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.uniquindio.crisdav.gestionventas.controller.ProductoController">
    <center>
        <VBox spacing="10" padding="10">
            <TableView fx:id="tablaProductos" prefHeight="300" onMouseClicked="#seleccionarProducto">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="120" />
                    <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="100" />
                    <TableColumn fx:id="colValorAdquisicion" text="Valor Adquisición" prefWidth="100" />
                    <TableColumn fx:id="colValorVenta" text="Valor Venta" prefWidth="100" />
                    <TableColumn fx:id="colIva" text="IVA" prefWidth="60" />
                    <TableColumn fx:id="colUtilidad" text="Utilidad" prefWidth="80" />
                </columns>
            </TableView>
            <HBox spacing="10">
                <Label text="Nombre:"/>
                <TextField fx:id="txtNombre" promptText="Nombre"/>
                <Label text="Categoría:"/>
                <TextField fx:id="txtCategoria" promptText="Categoría"/>
                <Label text="Valor Adq.:"/>
                <TextField fx:id="txtValorAdquisicion" promptText="Valor Adquisición"/>
                <Label text="Valor Venta:"/>
                <TextField fx:id="txtValorVenta" promptText="Valor Venta"/>
                <Label text="IVA:"/>
                <TextField fx:id="txtIva" promptText="IVA"/>
                <Label text="Utilidad:"/>
                <TextField fx:id="txtUtilidad" promptText="Utilidad"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Agregar" onAction="#agregarProducto" />
                <Button text="Editar" onAction="#editarProducto" />
                <Button text="Eliminar" onAction="#eliminarProducto" />
                <Button text="Refrescar" onAction="#initialize" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <Label text="Gestión de Productos" style="-fx-font-size: 16px; -fx-padding: 10;" />
    </bottom>
</BorderPane>
