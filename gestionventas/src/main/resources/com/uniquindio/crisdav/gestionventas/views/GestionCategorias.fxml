<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.uniquindio.crisdav.gestionventas.controllers.CategoriaController">
    <top>
        <HBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="CategorÃ­as" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Nuevo" onAction="#nuevo"/>
            <Button text="Refrescar" onAction="#refrescar"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TableView fx:id="tablaCategorias" prefHeight="250" onMouseClicked="#seleccionarCategoria">
                <columns>
                    <TableColumn fx:id="colIdCat" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNombreCat" text="Nombre" prefWidth="200"/>
                    <TableColumn fx:id="colIva" text="IVA" prefWidth="80"/>
                    <TableColumn fx:id="colUtilidad" text="Utilidad (%)" prefWidth="100"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Label text="Nombre:"/>
                <TextField fx:id="txtNombreCat"/>
                <Label text="IVA:"/>
                <TextField fx:id="txtIva" promptText="0.16"/>
                <Label text="Utilidad %:"/>
                <TextField fx:id="txtUtilidad" promptText="35"/>
            </HBox>

            <HBox spacing="10">
                <Button text="Agregar" onAction="#agregarCategoria"/>
                <Button text="Editar" onAction="#editarCategoria"/>
                <Button text="Eliminar" onAction="#eliminarCategoria"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
